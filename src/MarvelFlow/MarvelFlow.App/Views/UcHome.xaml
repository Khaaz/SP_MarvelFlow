<UserControl x:Class="MarvelFlow.App.Views.UcHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarvelFlow.App.Views"
             DataContext="{Binding Home, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button Content="HERO" Grid.Row="0" Grid.Column="0"
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"/>
        <Button Content="FILM" Grid.Row="0" Grid.Column="1"
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"/>
        <Button Content="PROFIL" Grid.Row="0" Grid.Column="2" 
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"/>

        <Image x:Name="affichetest_jpg" Source="pack://application:,,,/MarvelFlow.App;component/Images/affichetest.jpg"
               Grid.Row="1" Grid.Column="0"
               Margin="10,7.333,12,10" Stretch="Fill"/>
    </Grid>
</UserControl>
