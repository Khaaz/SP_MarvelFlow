<UserControl x:Class="MarvelFlow.App.Views.UcHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarvelFlow.App.Views"
             DataContext="{Binding Home, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button Content="HERO" Grid.Row="0" Grid.Column="0"
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"
                Command='{Binding NavigateListHeroCommand}' />
        <Button Content="FILM" Grid.Row="0" Grid.Column="1"
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"
                Command='{Binding NavigateListMovieCommand}' />
        <Button Content="PROFIL" Grid.Row="0" Grid.Column="2" 
                Background="Black" Foreground="White" 
                BorderBrush="White" FontWeight="Bold" BorderThickness="2"
                Command='{Binding NavigateProfileCommand}' />
        
    </Grid>
</UserControl>
